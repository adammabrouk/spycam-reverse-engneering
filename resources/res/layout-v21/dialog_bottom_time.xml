<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/z6"
                android:id="@+id/dialog_bottom_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:text="@string/cancel"
                android:layout_marginStart="26dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/z6"
                android:id="@+id/dialog_bottom_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:text="@string/sure"
                android:layout_marginEnd="26dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="@color/color_bbbbbb"
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/z6"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:text="@string/set_sd_show2"
                android:layout_weight="1"
                android:layout_marginStart="26dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/z6"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:text="@string/set_sd_show3"
                android:layout_weight="1"
                android:layout_marginEnd="26dp"/>
        </LinearLayout>
        <View
            android:background="@color/color_bbbbbb"
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TimePicker
                android:theme="@style/Theme.picker"
                android:id="@+id/dialog_bottom_tp1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:timePickerMode="spinner"/>
            <View
                android:background="@color/color_bbbbbb"
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TimePicker
                android:theme="@style/Theme.picker"
                android:id="@+id/dialog_bottom_tp2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:timePickerMode="spinner"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
