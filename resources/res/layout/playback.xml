<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ff000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
        <android.opengl.GLSurfaceView
            android:layout_gravity="center"
            android:id="@+id/myhsurfaceview"
            android:layout_width="match_parent"
            android:layout_height="205dp"/>
        <ImageView
            android:id="@+id/playback_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="end|top"
            android:id="@+id/textTimeStamp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>
        <ImageButton
            android:id="@+id/alerm_cancel"
            android:background="#00000000"
            android:padding="19dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/btn_back"
            android:scaleType="centerCrop"
            android:layout_marginStart="5dp"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_butoom"
        android:background="#50000000"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/btn_play"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/btn_play_img"
                    android:layout_width="@dimen/VIDEO_SIZE"
                    android:layout_height="@dimen/VIDEO_SIZE"
                    android:src="@mipmap/playback_pause"/>
            </LinearLayout>
            <SeekBar
                android:id="@+id/playback_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="5dp"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/seekbar"
                android:minHeight="3dp"
                android:thumb="@drawable/select_seekbar"
                android:thumbOffset="1dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:paddingStart="15dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ll_full_l"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:id="@+id/im_full_l"
                    android:layout_width="@dimen/VIDEO_SIZE"
                    android:layout_height="@dimen/VIDEO_SIZE"
                    android:src="@mipmap/playback_to_full"/>
                <TextView
                    android:textSize="@dimen/text_normal_size"
                    android:textColor="@color/color_white"
                    android:id="@+id/tv_full_l"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/n_play_full"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ll_pic_l"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/im_pic_l"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/playback_take_photo"/>
                <TextView
                    android:textSize="@dimen/VIDEO_TEXT_SIZE"
                    android:textColor="@color/color_white"
                    android:id="@+id/tv_pic_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/n_play_buttom_pic"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ll_audio_l"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/im_audio_l"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/playback_voice"/>
                <TextView
                    android:textSize="@dimen/VIDEO_TEXT_SIZE"
                    android:textColor="@color/color_white"
                    android:id="@+id/tv_audio_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/n_play_buttom_audio"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ll_video_l"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/im_video_l"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/playback_take_video"/>
                <TextView
                    android:textSize="@dimen/VIDEO_TEXT_SIZE"
                    android:textColor="@color/color_white"
                    android:id="@+id/tv_video_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/n_play_buttom_video"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout_connect_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/connecting"/>
    </LinearLayout>
</RelativeLayout>
