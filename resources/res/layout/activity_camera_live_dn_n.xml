<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rootView"
    android:background="@color/color_white"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <RelativeLayout
        android:id="@+id/lyHeader"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/ivBack"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                style="@style/button_back_style1"/>
        </RelativeLayout>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/ivOperator1"
            android:background="@drawable/listitem2_pressed_selector"
            android:padding="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="4dp"
            android:src="@mipmap/qh_play_set"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:background="@color/black6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lyHeader"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/shix_LL_buttom"
        android:background="@color/white"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/lyHeader">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/im_jx_ud"
                android:background="@drawable/selector_n_playview_t_ud"
                android:layout_width="48dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/im_jx_rl"
                android:background="@drawable/selector_n_playview_t_lr"
                android:layout_width="48dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <CheckBox
                android:id="@+id/cb_zsd"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:button="@drawable/selector_checkbox_indicator_light"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/cam_live_ys"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/im_ircut"
                android:background="@drawable/selector_n_playview_t_zsd_ircutclose"
                android:layout_width="48dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <CheckBox
                android:id="@+id/cb_szp"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:button="@drawable/selector_checkbox_clock"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/im_k"
                android:background="@drawable/listitem2_pressed_selector"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_720p_sel"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/black6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/shix_LL_buttom"/>
    <com.shix.shixipc.view.ZoomView
        android:id="@+id/zoomView"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_centerInParent="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.opengl.GLSurfaceView
                android:id="@+id/glVideo"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_gravity="end|top"
                android:id="@+id/ivSingn"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@mipmap/hz_wifisign"
                android:layout_marginEnd="15dp"/>
            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleLarge"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/cam_live_continue_play"
                android:visibility="gone"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@mipmap/hz_item_play"/>
            <ImageView
                android:layout_gravity="end|center_vertical"
                android:id="@+id/btn_full"
                android:background="@drawable/listitem2_pressed_selector"
                android:padding="1dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/hz_play_full1"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="top|center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/llRecordTips"
                android:background="@drawable/bg_border_video"
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/ivRecordTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/preview_icon_red"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="#ffffff"
                    android:id="@+id/tvRecordTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
        </FrameLayout>
    </com.shix.shixipc.view.ZoomView>
    <View
        android:id="@+id/view_line_bottom"
        android:background="@color/black6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/ll_play_bottom"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_play_bottom"
        android:background="@android:color/transparent"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/im_video"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:src="@mipmap/n_play_buttom_video"/>
            <TextView
                android:textSize="@dimen/text_size10"
                android:textColor="@color/black_4C4C4C"
                android:id="@+id/tv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_5"
                android:text="@string/n_play_buttom_video"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/im_pic"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:src="@mipmap/n_play_buttom_pic"/>
            <TextView
                android:textSize="@dimen/text_size10"
                android:textColor="@color/black_4C4C4C"
                android:id="@+id/tv_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_5"
                android:text="@string/n_play_buttom_pic"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/im_zsd"
                android:background="@drawable/listitem2_pressed_selector"
                android:padding="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_zhishi"/>
            <TextView
                android:textSize="@dimen/text_size10"
                android:textColor="@color/black_4C4C4C"
                android:id="@+id/tv_zsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_2"
                android:text="@string/playview_zsd"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/im_t"
                android:background="@drawable/listitem2_pressed_selector"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/n_playview_t_zsd_topen"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_talk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/im_talk"
                android:layout_width="56dp"
                android:layout_height="48dp"
                android:src="@mipmap/n_play_buttom_talk"/>
            <TextView
                android:textSize="@dimen/text_size12"
                android:textColor="@color/black_4C4C4C"
                android:id="@+id/tv_talk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/n_play_buttom_talk"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_audio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/im_audio"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:src="@mipmap/n_audios2"/>
            <TextView
                android:textSize="@dimen/text_size10"
                android:textColor="@color/black_4C4C4C"
                android:id="@+id/tv_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_5"
                android:text="@string/n_play_buttom_audio"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/im_more"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:src="@mipmap/n_play_buttom_more"/>
            <TextView
                android:textSize="@dimen/text_size10"
                android:textColor="@color/black_4C4C4C"
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_5"
                android:text="@string/n_play_buttom_more"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lyHeader">
        <FrameLayout
            android:id="@+id/framlay"
            android:layout_width="match_parent"
            android:layout_height="205dp">
            <TextView
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:gravity="center_vertical"
                android:id="@+id/tv_name1"
                android:visibility="gone"
                android:layout_width="136dp"
                android:layout_height="30dp"
                android:text="设备名称"
                android:layout_marginStart="30dp"/>
            <TextView
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_name2"
                android:visibility="gone"
                android:layout_width="136dp"
                android:layout_height="30dp"
                android:text=""/>
        </FrameLayout>
        <Button
            android:id="@+id/btnTouch"
            android:background="#00ffffff"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:layout_marginTop="30dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/rl_h_bm"
            android:background="#e6737577"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_height66"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/im_jx_ud2"
                    android:layout_width="@dimen/widget_w_h_32"
                    android:layout_height="@dimen/widget_w_h_32"
                    android:src="@mipmap/ic_ud_full"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/im_jx_rl2"
                    android:layout_width="@dimen/widget_w_h_32"
                    android:layout_height="@dimen/widget_w_h_32"
                    android:src="@mipmap/ic_lr_full"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ll_audio2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/im_audio2"
                    android:layout_width="@dimen/widget_w_h_32"
                    android:layout_height="@dimen/widget_w_h_32"
                    android:src="@mipmap/full_voice_close_icon"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ll_talk2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/im_talk2"
                    android:layout_width="@dimen/widget_w_h_32"
                    android:layout_height="@dimen/widget_w_h_32"
                    android:src="@mipmap/full_speak_close_icon"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/cam_live_ys1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/im_ircut1"
                    android:layout_width="@dimen/widget_w_h_32"
                    android:layout_height="@dimen/widget_w_h_32"
                    android:src="@mipmap/full_red_icon"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/llhz_hz"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/im_k2"
                    android:background="@drawable/listitem2_pressed_selector"
                    android:layout_width="@dimen/widget_w_h_32"
                    android:layout_height="@dimen/widget_w_h_32"
                    android:src="@mipmap/ic_hd_full"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/llhz_full2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/btn_full2"
                    android:background="@drawable/listitem2_pressed_selector"
                    android:layout_width="@dimen/widget_w_h_32"
                    android:layout_height="@dimen/widget_w_h_32"
                    android:src="@mipmap/full_to_small_icon"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/cam_live_bottom"
            android:background="#f8f8f8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/framlay">
            <ImageButton
                android:id="@+id/im_showhide"
                android:background="#00000000"
                android:visibility="invisible"
                android:layout_width="@dimen/VIDEO_IMG_W"
                android:layout_height="@dimen/VIDEO_IMG_H"
                android:layout_marginTop="70dp"
                android:src="@mipmap/huang_play_up"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/mtv_set_ksw"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginStart="20dp">
                <ImageView
                    android:background="@mipmap/set_ksw"
                    android:layout_width="@dimen/VIDEO_IMG_W"
                    android:layout_height="@dimen/VIDEO_IMG_W"/>
                <com.shix.shixipc.view.MyTextView
                    android:textSize="@dimen/VIDEO_TEXT_SIZEH"
                    android:textColor="@color/black_4C4C4C"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_ksw"
                    android:marqueeRepeatLimit="marquee_forever"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
                <FrameLayout
                    android:id="@+id/fl_bg"
                    android:background="@mipmap/n_ptz_bg"
                    android:visibility="gone"
                    android:layout_width="@dimen/n_playview_ptz_bg_wh"
                    android:layout_height="@dimen/n_playview_ptz_bg_wh">
                    <ImageButton
                        android:layout_gravity="top|center_horizontal"
                        android:id="@+id/btnPtz_up"
                        android:background="#00000000"
                        android:layout_width="@dimen/n_playview_ptz_btn_w"
                        android:layout_height="@dimen/n_playview_ptz_btn_h"
                        android:src="@mipmap/n_ptz_up"/>
                    <ImageButton
                        android:layout_gravity="bottom|center_horizontal"
                        android:id="@+id/btnPtz_down"
                        android:background="#00000000"
                        android:layout_width="@dimen/n_playview_ptz_btn_w"
                        android:layout_height="@dimen/n_playview_ptz_btn_h"
                        android:src="@mipmap/n_ptz_down"/>
                    <ImageButton
                        android:layout_gravity="start|center_vertical"
                        android:id="@+id/btnPtz_left"
                        android:background="#00000000"
                        android:layout_width="@dimen/n_playview_ptz_btn_w"
                        android:layout_height="@dimen/n_playview_ptz_btn_h"
                        android:src="@mipmap/n_ptz_left"/>
                    <ImageButton
                        android:layout_gravity="end|center_vertical"
                        android:id="@+id/btnPtz_right"
                        android:background="#00000000"
                        android:layout_width="@dimen/n_playview_ptz_btn_w"
                        android:layout_height="@dimen/n_playview_ptz_btn_h"
                        android:src="@mipmap/n_ptz_right"/>
                    <Button
                        android:textSize="16sp"
                        android:textColor="@color/color_H_Main"
                        android:layout_gravity="center"
                        android:id="@+id/btnPtz_cer"
                        android:background="@drawable/btn_pzt_reset_sele"
                        android:layout_width="@dimen/n_playview_ptz_btncent_wh"
                        android:layout_height="@dimen/n_playview_ptz_btncent_wh"
                        android:text="@string/n_cloudset_reset"
                        android:textAllCaps="false"/>
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
