<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/ll_popup_4k"
    android:background="@drawable/background_listbg4"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp">
    <Button
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:id="@+id/button_4k"
        android:background="@drawable/listitem2_pressed_selector"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:text="4K"
        android:singleLine="true"/>
    <View
        android:background="@color/color_qh_bom_normal_viewline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <Button
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:id="@+id/button_2k"
        android:background="@drawable/listitem2_pressed_selector"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="2K"/>
    <View
        android:background="@color/color_qh_bom_normal_viewline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <Button
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:id="@+id/button_1080"
        android:background="@drawable/listitem2_pressed_selector"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="1080P"/>
    <View
        android:background="@color/color_qh_bom_normal_viewline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <Button
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:id="@+id/button_720"
        android:background="@drawable/listitem2_pressed_selector"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:text="720P"/>
</LinearLayout>
