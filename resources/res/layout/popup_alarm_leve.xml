<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background_listbg4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp">
    <Button
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:id="@+id/button_leve_1"
        android:background="@drawable/listitem2_pressed_selector"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/alarm_setting_5_h"
        android:singleLine="true"
        android:textAllCaps="false"/>
    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <Button
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:id="@+id/button_leve_2"
        android:background="@drawable/listitem2_pressed_selector"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/alarm_setting_5_M"
        android:textAllCaps="false"/>
    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <Button
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:id="@+id/button_leve_3"
        android:background="@drawable/listitem2_pressed_selector"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/alarm_setting_5_L"
        android:textAllCaps="false"/>
    <Button
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/button_leve_4"
        android:visibility="gone"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:text="4"
        android:textAllCaps="false"/>
    <Button
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/button_leve_5"
        android:visibility="gone"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:text="5"
        android:textAllCaps="false"/>
</LinearLayout>
