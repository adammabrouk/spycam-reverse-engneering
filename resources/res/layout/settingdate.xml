<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/Relative_top"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/date_cancel"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            style="@style/button_back_style1"/>
        <com.shix.shixipc.view.MyTextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:ellipsize="marquee"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_camera_setting"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:text="@string/setting_time"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_centerInParent="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginStart="10dp"/>
        <Button
            android:id="@+id/date_ok"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            style="@style/button_done_style"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView1"
        android:background="@color/color_EDEDED"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Relative_top">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout1"
                    android:background="@drawable/background_listbg"
                    android:padding="@dimen/margin_size10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.shix.shixipc.view.MyTextView
                        android:textSize="@dimen/text_size14"
                        android:textColor="#121212"
                        android:ellipsize="marquee"
                        android:gravity="start|center_vertical"
                        android:focusableInTouchMode="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxWidth="200dp"
                        android:minWidth="100dp"
                        android:text="@string/date_device_time"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"/>
                    <TextView
                        android:textSize="@dimen/text_size14"
                        android:textColor="#121212"
                        android:gravity="end"
                        android:id="@+id/date_tv_device_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/background_listbg"
                    android:padding="@dimen/margin_size10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <com.shix.shixipc.view.MyTextView
                        android:textSize="@dimen/text_size14"
                        android:textColor="#121212"
                        android:ellipsize="marquee"
                        android:gravity="start|center_vertical"
                        android:focusableInTouchMode="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxWidth="200dp"
                        android:minWidth="100dp"
                        android:text="@string/date_device_timezone"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"/>
                    <TextView
                        android:textSize="@dimen/text_size14"
                        android:textColor="#121212"
                        android:gravity="end"
                        android:id="@+id/date_edit_timezone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <ImageView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>
                <ImageView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@+id/date_ntp_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/date_edit_ntp_server_layout"
                        android:background="@drawable/background_listbg"
                        android:padding="@dimen/margin_size10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size15">
                        <com.shix.shixipc.view.MyTextView
                            android:textSize="@dimen/text_size14"
                            android:textColor="#121212"
                            android:ellipsize="marquee"
                            android:gravity="start|center_vertical"
                            android:focusableInTouchMode="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:maxWidth="200dp"
                            android:minWidth="100dp"
                            android:text="@string/date_ntp_server"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"/>
                        <TextView
                            android:textSize="@dimen/text_size14"
                            android:textColor="#121212"
                            android:gravity="end"
                            android:id="@+id/date_edit_ntp_server"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/qh_right_next"
                            android:layout_marginStart="@dimen/margin_size10"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:background="@drawable/background_listbg"
                        android:padding="@dimen/margin_size10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size15">
                        <com.shix.shixipc.view.SwitchView
                            android:id="@+id/date_cbx_check"
                            android:layout_width="@dimen/switch_width"
                            android:layout_height="@dimen/switch_height"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                        <com.shix.shixipc.view.MyTextView
                            android:textSize="@dimen/text_size14"
                            android:textColor="#121212"
                            android:ellipsize="marquee"
                            android:gravity="start|center_vertical"
                            android:focusableInTouchMode="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:maxWidth="200dp"
                            android:minWidth="100dp"
                            android:text="@string/date_ntp_server_auto_check"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:layout_centerVertical="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:layout_alignParentStart="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:background="@drawable/background_listbg"
                        android:padding="@dimen/margin_size10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/all_item_margleftright">
                        <com.shix.shixipc.view.SwitchView
                            android:id="@+id/xls_cbx_check"
                            android:layout_width="@dimen/switch_width"
                            android:layout_height="@dimen/switch_height"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                        <com.shix.shixipc.view.MyTextView
                            android:textSize="@dimen/text_size14"
                            android:textColor="#121212"
                            android:ellipsize="marquee"
                            android:gravity="start|center_vertical"
                            android:focusableInTouchMode="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:maxWidth="200dp"
                            android:minWidth="100dp"
                            android:text="@string/dev_date_xls"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:layout_centerVertical="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:layout_marginEnd="@dimen/all_item_margleftright"
                            android:layout_alignParentStart="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:background="@drawable/background_listbg"
                        android:padding="@dimen/margin_size10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/all_item_margleftright">
                        <com.shix.shixipc.view.SwitchView
                            android:id="@+id/yees_cbx_check"
                            android:layout_width="@dimen/switch_width"
                            android:layout_height="@dimen/switch_height"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                        <com.shix.shixipc.view.MyTextView
                            android:textSize="@dimen/text_size14"
                            android:textColor="#121212"
                            android:ellipsize="marquee"
                            android:gravity="start|center_vertical"
                            android:focusableInTouchMode="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:maxWidth="200dp"
                            android:minWidth="100dp"
                            android:text="@string/time_hour_1224"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:layout_centerVertical="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:layout_alignParentStart="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:textColor="@color/color_white"
                        android:id="@+id/date_btn_checkout"
                        android:background="@drawable/btn_blue_selector"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="@string/date_phone_time_auto_check"
                        android:singleLine="true"
                        android:textAllCaps="false"
                        android:layout_marginStart="@dimen/all_btn_margleftright"
                        android:layout_marginEnd="@dimen/all_btn_margleftright"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
