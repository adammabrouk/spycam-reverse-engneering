<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_EDEDED"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/Relative_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/alerm_cancel"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            style="@style/button_back_style1"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_camera_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_alerm"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"/>
        <Button
            android:id="@+id/alerm_ok"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            style="@style/button_done_style"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearLayout3"
        android:background="@drawable/background_listbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size14"
        android:layout_below="@+id/Relative_top"
        android:layout_marginStart="@dimen/margin_size20"
        android:layout_marginEnd="@dimen/margin_size20">
        <RelativeLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/background_listbg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_item_setheight"
            android:layout_marginTop="@dimen/margin_size10"
            android:layout_marginStart="@dimen/margin_size10">
            <TextView
                android:textSize="@dimen/text_size14"
                android:textColor="@color/color_qh_bom_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="140dp"
                android:checkedButton="@+id/rad1"
                android:text="@string/alarm_setting_1"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>
            <com.shix.shixipc.view.SwitchView
                android:id="@+id/sw1"
                android:layout_width="@dimen/switch_width"
                android:layout_height="@dimen/switch_height"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_size10"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="@color/color_bbbbbb"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_size10"
            android:layout_marginEnd="@dimen/margin_size10"/>
        <RelativeLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/renxing"
            android:background="@drawable/background_listbg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_item_setheight"
            android:layout_marginTop="@dimen/margin_size10"
            android:layout_marginStart="@dimen/margin_size10">
            <TextView
                android:textSize="@dimen/text_size14"
                android:textColor="@color/color_qh_bom_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="140dp"
                android:checkedButton="@+id/rad1"
                android:text="@string/alarm_setting_7"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>
            <com.shix.shixipc.view.SwitchView
                android:id="@+id/sw4"
                android:layout_width="@dimen/switch_width"
                android:layout_height="@dimen/switch_height"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_size10"
                android:layout_alignParentEnd="true"/>
            <View
                android:background="@color/color_bbbbbb"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/background_listbg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_item_setheight"
            android:layout_marginTop="@dimen/margin_size10"
            android:layout_marginStart="@dimen/margin_size10">
            <TextView
                android:textSize="@dimen/text_size14"
                android:textColor="@color/color_qh_bom_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="140dp"
                android:checkedButton="@+id/rad1"
                android:text="@string/alarm_pir_push"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>
            <com.shix.shixipc.view.SwitchView
                android:id="@+id/sw2"
                android:layout_width="@dimen/switch_width"
                android:layout_height="@dimen/switch_height"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_size10"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="@color/color_bbbbbb"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_size10"
            android:layout_marginEnd="@dimen/margin_size10"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/background_listbg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_item_setheight"
            android:layout_marginTop="@dimen/margin_size10"
            android:layout_marginStart="@dimen/margin_size10">
            <RelativeLayout
                android:gravity="center_vertical"
                android:id="@+id/layoutr_alerm_leve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/color_qh_bom_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm_setting_5"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>
                <ImageView
                    android:id="@+id/img_right"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/qh_right_next"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_size10"
                    android:layout_marginEnd="@dimen/margin_size10"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/color_qh_bom_normal"
                    android:id="@+id/tv_alarm_leve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm_setting_5_h"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/img_right"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:background="@color/color_bbbbbb"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_size10"
            android:layout_marginEnd="@dimen/margin_size10"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/background_listbg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_item_setheight"
            android:layout_marginTop="@dimen/margin_size10"
            android:layout_marginStart="@dimen/margin_size10">
            <TextView
                android:textSize="@dimen/text_size14"
                android:textColor="@color/color_qh_bom_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarm_setting_3"
                android:layout_marginEnd="5dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <EditText
                android:textSize="@dimen/text_size14"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/edit_alarm_delay_time"
                android:background="@drawable/bg_border1"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:hint="10-60"
                android:singleLine="true"
                android:maxLength="3"
                android:digits="0123456789"
                android:inputType="number"
                android:textCursorDrawable="@drawable/input_textcursor_color"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="@dimen/margin_size10"/>
        </LinearLayout>
        <View
            android:background="@color/color_bbbbbb"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_size10"
            android:layout_marginEnd="@dimen/margin_size10"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/background_listbg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_item_setheight"
            android:layout_marginTop="@dimen/margin_size10"
            android:layout_marginStart="@dimen/margin_size10">
            <TextView
                android:textSize="@dimen/text_size14"
                android:textColor="@color/color_qh_bom_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarm_setting_4"
                android:layout_marginEnd="5dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <EditText
                android:textSize="@dimen/text_size14"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/edit_time_delay"
                android:background="@drawable/bg_border1"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:hint="30-240"
                android:singleLine="true"
                android:maxLength="3"
                android:digits="0123456789"
                android:inputType="number"
                android:textCursorDrawable="@drawable/input_textcursor_color"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="@dimen/margin_size10"/>
        </LinearLayout>
        <View
            android:background="@color/color_bbbbbb"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_size10"
            android:layout_marginEnd="@dimen/margin_size10"/>
        <RelativeLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/background_listbg"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_item_setheight"
            android:layout_marginTop="@dimen/margin_size10"
            android:layout_marginStart="@dimen/margin_size10">
            <TextView
                android:textSize="@dimen/text_size14"
                android:textColor="@color/color_qh_bom_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="140dp"
                android:checkedButton="@+id/rad1"
                android:text="@string/motion_detection_picture"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>
            <com.shix.shixipc.view.SwitchView
                android:id="@+id/sw_alarm_cloud_pic"
                android:layout_width="@dimen/switch_width"
                android:layout_height="@dimen/switch_height"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_size10"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="@color/color_bbbbbb"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_size10"
            android:layout_marginEnd="@dimen/margin_size10"/>
        <RelativeLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/background_listbg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_item_setheight"
            android:layout_marginTop="@dimen/margin_size10"
            android:layout_marginStart="@dimen/margin_size10">
            <TextView
                android:textSize="@dimen/text_size14"
                android:textColor="@color/color_qh_bom_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="140dp"
                android:checkedButton="@+id/rad1"
                android:text="@string/night_timing_mode"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>
            <com.shix.shixipc.view.SwitchView
                android:id="@+id/sw_alarm_ir_timer_mode"
                android:layout_width="@dimen/switch_width"
                android:layout_height="@dimen/switch_height"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_size10"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="@color/color_bbbbbb"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_size10"
            android:layout_marginEnd="@dimen/margin_size10"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/background_listbg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_item_setheight"
            android:layout_marginTop="@dimen/margin_size10"
            android:layout_marginStart="@dimen/margin_size10">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/color_qh_bom_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/at_night_time"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="@dimen/text_size10"
                    android:textColor="@color/color_B6BAC1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_time_end_time"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/text_size14"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_alarm_ir_timer"
                android:background="@drawable/bg_border1"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="0:00-0:00"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/input_textcursor_color"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="@dimen/margin_size10"/>
        </LinearLayout>
        <Button
            android:textSize="@dimen/text_size14"
            android:gravity="start|center_vertical"
            android:id="@+id/setting_reset"
            android:background="@drawable/listitem1_pressed_selector"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="8dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/text_size12"
        android:textColor="@color/color_n_play_buttom_normal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size10"
        android:text="@string/tip_ap_setting"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginStart="@dimen/margin_size20"
        android:layout_marginEnd="@dimen/margin_size20"/>
</RelativeLayout>
