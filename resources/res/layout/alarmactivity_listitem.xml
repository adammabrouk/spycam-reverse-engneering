<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/cameralistrootview"
        android:background="@drawable/listitem3_pressed_selector"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_item_itemheight"
        android:layout_marginTop="@dimen/all_item_margtop"
        android:layout_marginStart="@dimen/all_item_margleftright"
        android:layout_marginEnd="@dimen/all_item_margleftright">
        <View
            android:background="#40ffffff"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_alignParentTop="true"/>
        <com.shix.shixipc.view.RoundAngleImageView
            android:id="@+id/imgSnapshot"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@mipmap/qh_dev1"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="6dp"
            android:layout_alignParentStart="true"
            app:roundHeight1="3dp"
            app:roundWidth1="3dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_toEndOf="@+id/imgSnapshot">
            <TextView
                android:textSize="14sp"
                android:textColor="#000000"
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HDCAM"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_qh_bom_normal"
                android:id="@+id/tv_did"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="AAAAAAAAAAAAAAAAAA"
                android:layout_marginStart="3px"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <TextView
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_status_name"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/color_qh_bom_normal"
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="initialing"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@mipmap/qh_right_next"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
