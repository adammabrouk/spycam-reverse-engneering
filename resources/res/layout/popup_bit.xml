<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background_listbg4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp">
    <Button
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:id="@+id/btn_bit1"
        android:background="@drawable/listitem2_pressed_selector"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/setting_sd_bit1"
        android:singleLine="true"
        android:textAllCaps="false"/>
    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <Button
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:id="@+id/btn_bit2"
        android:background="@drawable/listitem2_pressed_selector"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/setting_sd_bit2"
        android:textAllCaps="false"/>
</LinearLayout>
