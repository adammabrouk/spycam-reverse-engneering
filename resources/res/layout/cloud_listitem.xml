<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <ImageButton
            android:id="@+id/button_check_pic"
            android:background="#00000000"
            android:padding="5dp"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:src="@mipmap/play_set_setting_picture_press"
            android:scaleType="fitCenter"/>
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_qh_bom_normal"
                android:id="@+id/alarm_log_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="type"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:textColor="@color/color_qh_bom_normal"
                android:id="@+id/alarm_log_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxWidth="200dp"
                android:text=""
                android:layout_below="@+id/alarm_log_left"/>
            <TextView
                android:id="@+id/alarm_log_content"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:layout_below="@+id/alarm_log_time"
                android:layout_alignStart="@+id/alarm_log_left"/>
            <CheckBox
                android:id="@+id/alarm_delete_box"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:visibility="visible"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_pw_checkbox"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
