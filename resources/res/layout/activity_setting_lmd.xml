<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_EDEDED"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/Relative_top"
        android:background="@color/color_H_Main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">
        <Button
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            style="@style/button_back_style1"/>
        <com.shix.shixipc.view.MyTextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_white"
            android:ellipsize="marquee"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_camera_setting"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:text="@string/yuntai_zzlmd"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_centerInParent="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_listbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/rl_glmd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_item_setheight"
            android:layout_marginStart="@dimen/all_item_margleftright"
            android:layout_marginEnd="@dimen/all_item_margleftright">
            <TextView
                android:textSize="@dimen/all_other_text_size"
                android:textColor="@color/color_qh_bom_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yuntai_glmd"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:id="@+id/iv_glmd"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@mipmap/selection"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"/>
            <com.shix.shixipc.view.MyTextView
                android:textSize="@dimen/all_other_text_size"
                android:textColor="@color/color_qh_bom_normal"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:text="@string/yuntai_glmd_tip"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_marginEnd="36dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="@color/color_bbbbbb"
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/rl_zlmd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_item_setheight"
            android:layout_marginStart="@dimen/all_item_margleftright"
            android:layout_marginEnd="@dimen/all_item_margleftright">
            <TextView
                android:textSize="@dimen/all_other_text_size"
                android:textColor="@color/color_qh_bom_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yuntai_zlmd"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:id="@+id/iv_zlmd"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@mipmap/selection"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"/>
            <com.shix.shixipc.view.MyTextView
                android:textSize="@dimen/all_other_text_size"
                android:textColor="@color/color_qh_bom_normal"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:text="@string/yuntai_zlmd_tip"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_marginEnd="36dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="@color/color_bbbbbb"
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/rl_dlmd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_item_setheight"
            android:layout_marginStart="@dimen/all_item_margleftright"
            android:layout_marginEnd="@dimen/all_item_margleftright">
            <TextView
                android:textSize="@dimen/all_other_text_size"
                android:textColor="@color/color_qh_bom_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yuntai_dlmd"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:id="@+id/iv_dlmd"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@mipmap/selection"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"/>
            <com.shix.shixipc.view.MyTextView
                android:textSize="@dimen/all_other_text_size"
                android:textColor="@color/color_qh_bom_normal"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:text="@string/yuntai_dlmd_tip"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_marginEnd="36dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
