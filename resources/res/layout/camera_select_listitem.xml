<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/listitem1_pressed_selector"
    android:padding="5dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <CheckBox
        android:id="@+id/camera_edit_cbx"
        android:focusable="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_alignParentStart="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/camera_edit_cbx">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/color_qh_bom_normal"
            android:id="@+id/cameraDevName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_qh_bom_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_qh_bom_normal"
                android:id="@+id/cameraDevID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3px"/>
        </LinearLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/color_qh_bom_normal"
            android:id="@+id/textPPPPStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="initialing"
            android:layout_marginStart="3px"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
