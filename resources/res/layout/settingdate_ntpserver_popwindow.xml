<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/background_listbg4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:textColor="@color/color_white"
        android:ellipsize="marquee"
        android:gravity="center"
        android:id="@+id/date_ntpserver_kriss"
        android:background="#00000000"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/date_ntp_server_time_kriss_re_kr"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:textAllCaps="false"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@color/color_qh_bom_normal_viewline"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <Button
        android:textColor="@color/color_white"
        android:ellipsize="marquee"
        android:gravity="center"
        android:id="@+id/date_ntpserver_nist"
        android:background="#00000000"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/date_ntp_server_time_nist_gov"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:textAllCaps="false"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@color/color_qh_bom_normal_viewline"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <Button
        android:textColor="@color/color_white"
        android:ellipsize="marquee"
        android:gravity="center"
        android:id="@+id/date_ntpserver_nuri"
        android:background="#00000000"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/date_ntp_server_time_nuri_net"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:textAllCaps="false"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@color/color_qh_bom_normal_viewline"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <Button
        android:textColor="@color/color_white"
        android:ellipsize="marquee"
        android:gravity="center"
        android:id="@+id/date_ntpserver_windows"
        android:background="#00000000"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/date_ntp_server_time_windows_com"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:textAllCaps="false"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@color/color_qh_bom_normal_viewline"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
</LinearLayout>
