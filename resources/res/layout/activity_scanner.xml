<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:background="@color/color_main"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/btn_back"
            android:background="#00000000"
            android:padding="17dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/btn_back"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan_er"
            android:layout_centerInParent="true"/>
        <Button
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:id="@+id/btn_album"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/scan_xc"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:textAllCaps="false"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <SurfaceView
            android:layout_gravity="center"
            android:id="@+id/scanner_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.google.zxing.view.ViewfinderView
            android:id="@+id/viewfinder_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:corner_color="@color/color_H_Main"
            app:frame_color="@color/viewfinder_frame"
            app:label_text="@string/scan_er1"
            app:label_text_color="@color/color_H_Main"
            app:laser_color="@color/color_H_Main"
            app:mask_color="@color/viewfinder_mask"
            app:result_color="@color/result_view"
            app:result_point_color="@color/result_point_color"/>
        <ImageButton
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/btn_flash"
            android:background="#00000000"
            android:padding="3dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/flash_off"
            android:scaleType="centerInside"/>
    </FrameLayout>
</LinearLayout>
