<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_EDEDED"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:background="@color/color_H_Main"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/hotspot_cancel"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            style="@style/button_back_style1"/>
        <com.shix.shixipc.view.MyTextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_white"
            android:ellipsize="marquee"
            android:layout_gravity="center_vertical"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:text="修改设备热点密码"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_centerInParent="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_listbg1"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:paddingStart="5dp"
        android:layout_marginStart="@dimen/all_item_margleftright"
        android:layout_marginEnd="@dimen/all_item_margleftright">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp">
            <com.shix.shixipc.view.MyTextView
                android:textSize="@dimen/all_other_text_size"
                android:textColor="@color/color_qh_bom_normal"
                android:ellipsize="marquee"
                android:gravity="center"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="原热点名称："
                android:singleLine="true"
                android:layout_weight="2"
                android:marqueeRepeatLimit="marquee_forever"/>
            <EditText
                android:id="@+id/hotspot_old_name"
                android:background="@drawable/bg_border1"
                android:focusable="false"
                android:longClickable="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:maxLength="63"
                android:layout_weight="5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp">
            <com.shix.shixipc.view.MyTextView
                android:textSize="@dimen/all_other_text_size"
                android:textColor="@color/color_qh_bom_normal"
                android:ellipsize="marquee"
                android:gravity="center"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="原热点密码："
                android:singleLine="true"
                android:layout_weight="2"
                android:marqueeRepeatLimit="marquee_forever"/>
            <EditText
                android:id="@+id/hotspot_old_psd"
                android:background="@drawable/bg_border1"
                android:focusable="false"
                android:longClickable="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:maxLength="63"
                android:layout_weight="5"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_listbg1"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:paddingStart="5dp"
        android:layout_marginStart="@dimen/all_item_margleftright"
        android:layout_marginEnd="@dimen/all_item_margleftright">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp">
            <com.shix.shixipc.view.MyTextView
                android:textSize="@dimen/all_other_text_size"
                android:textColor="@color/color_qh_bom_normal"
                android:ellipsize="marquee"
                android:gravity="center"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="新热点名称："
                android:singleLine="true"
                android:layout_weight="2"
                android:marqueeRepeatLimit="marquee_forever"/>
            <EditText
                android:id="@+id/hotspot_new_name"
                android:background="@drawable/bg_border1"
                android:longClickable="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:maxLength="63"
                android:layout_weight="5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp">
            <com.shix.shixipc.view.MyTextView
                android:textSize="@dimen/all_other_text_size"
                android:textColor="@color/color_qh_bom_normal"
                android:ellipsize="marquee"
                android:gravity="center"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="新热点密码："
                android:singleLine="true"
                android:layout_weight="2"
                android:marqueeRepeatLimit="marquee_forever"/>
            <EditText
                android:id="@+id/hotspot_new_psd"
                android:background="@drawable/bg_border1"
                android:longClickable="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:maxLength="63"
                android:layout_weight="5"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:textColor="@color/color_white"
        android:id="@+id/hotspot_password_btn"
        android:background="@drawable/btn_blue_selector"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="10dp"
        android:text="@string/done"
        android:textAllCaps="false"
        android:layout_marginStart="@dimen/all_btn_margleftright"
        android:layout_marginEnd="@dimen/all_btn_margleftright"/>
</LinearLayout>
