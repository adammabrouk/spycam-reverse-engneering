<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/rlRootCloudPhotoView"
    android:background="#ff000000"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/photo_top"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/photo_back"
            android:background="#00000000"
            android:padding="@dimen/margin_right_size13"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@mipmap/head_left"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_file_photo"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:id="@+id/ibPhotoMore"
            android:background="#0000"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_more"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/item_device_bg"
        android:scaleType="fitCenter"/>
</RelativeLayout>
