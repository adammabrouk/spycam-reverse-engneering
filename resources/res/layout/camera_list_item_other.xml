<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="245dp">
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/llEqu"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/ll_statue"
            android:layout_alignParentStart="true">
            <TextView
                android:textSize="11sp"
                android:textColor="@color/color_n_status_offline"
                android:ellipsize="end"
                android:id="@+id/cameraDevID"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="说的很多话的活动"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_statue"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true">
            <ImageView
                android:id="@+id/ivState"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/cir_other"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/flEqu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llEqu">
            <com.shix.shixipc.view.RadiuImageView
                android:id="@+id/imgSnapshot"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:src="@mipmap/n_dev_item_df_default"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@null"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentStart="true"
                app:left_bottom_radius="10dp"
                app:left_top_radius="0dp"
                app:right_bottom_radius="10dp"
                app:right_top_radius="0dp"/>
            <View
                android:id="@+id/viewItem1"
                android:background="@drawable/biz_content_bg1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/im_play"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@mipmap/hz_item_offline"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_white"
                android:layout_gravity="center"
                android:id="@+id/textPPPPStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/app_name"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#ffff0000"
                android:id="@+id/textDeafualPwd"
                android:background="@drawable/background_lable_status"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/pwd_edit_show1"
                android:singleLine="true"
                android:layout_below="@+id/textPPPPStatus"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="10dp"/>
        </FrameLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/flEqu">
            <TextView
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_070707"
                android:ellipsize="end"
                android:id="@+id/cameraDevName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginEnd="16dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/llAlarm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:padding="@dimen/upsdk_margin_xs"
                        android:layout_width="@dimen/n_main_buttom_width"
                        android:layout_height="@dimen/n_main_buttom_width"
                        android:src="@mipmap/hz_item_set"/>
                    <TextView
                        android:textSize="@dimen/text_size10"
                        android:textColor="@color/black_070707"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting"
                        android:layout_centerHorizontal="true"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/llVideo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/iv_video"
                        android:padding="@dimen/upsdk_margin_xs"
                        android:layout_width="@dimen/n_main_buttom_width"
                        android:layout_height="@dimen/n_main_buttom_width"
                        android:src="@mipmap/hz_item_alarm"/>
                    <TextView
                        android:textSize="@dimen/text_size10"
                        android:textColor="@color/black_070707"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tip_zhence"
                        android:layout_centerHorizontal="true"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/llPic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:padding="@dimen/upsdk_margin_xs"
                        android:layout_width="@dimen/n_main_buttom_width"
                        android:layout_height="@dimen/n_main_buttom_width"
                        android:src="@mipmap/hz_item_tf"/>
                    <TextView
                        android:textSize="@dimen/text_size10"
                        android:textColor="@color/black_070707"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tip_huifang"
                        android:layout_below="@+id/iv_video"
                        android:layout_centerHorizontal="true"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/llSetting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:padding="@dimen/upsdk_margin_xs"
                        android:layout_width="@dimen/n_main_buttom_width"
                        android:layout_height="@dimen/n_main_buttom_width"
                        android:src="@mipmap/hz_item_del"/>
                    <TextView
                        android:textSize="@dimen/text_size10"
                        android:textColor="@color/black_070707"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delete_camera"
                        android:layout_below="@+id/ivSetting"
                        android:layout_centerHorizontal="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
