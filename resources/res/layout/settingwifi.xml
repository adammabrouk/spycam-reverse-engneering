<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/Relative_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/wifi_cancel"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            style="@style/button_back_style1"/>
        <com.shix.shixipc.view.MyTextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:ellipsize="marquee"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_camera_setting"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:text="@string/setting_wifi"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_centerInParent="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Relative_top">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/ic_wifi_2_4"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/wifi_input_bg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="15dp">
            <EditText
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:id="@+id/wifi_tv_name"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:hint="@string/add_device_danale_wifi_name"
                android:maxLines="1"
                android:maxLength="30"
                android:layout_weight="1"
                android:paddingStart="17dp"
                android:paddingEnd="5dp"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/color_5E90ED"
                android:id="@+id/wifi_btn_manger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refresh"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/wifi_input_bg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">
            <EditText
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:id="@+id/wifi_edit_pwd"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:hint="@string/add_device_danale_wifi_pass"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:layout_weight="1"
                android:textCursorDrawable="@drawable/input_textcursor_color"
                android:paddingStart="17dp"
                android:paddingEnd="5dp"/>
            <ImageView
                android:id="@+id/wifi_cbox_show_pwd"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@mipmap/eyes_open"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/wifi_listview"
                android:background="@drawable/background_listbg1"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/all_item_margleftright"
                android:listSelector="#00000000"
                android:cacheColorHint="#00000000"
                android:divider="@color/color_qh_bom_normal_viewline"
                android:dividerHeight="0.5dp"
                android:footerDividersEnabled="false"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:textSize="@dimen/all_other_text_size"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/wifi_ok"
        android:background="@drawable/btn_blue_selector"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:text="@string/n_apconnect_next"
        android:singleLine="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:textAllCaps="false"
        android:layout_marginStart="@dimen/margin_size20"
        android:layout_marginEnd="@dimen/margin_size20"/>
</RelativeLayout>
