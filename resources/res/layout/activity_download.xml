<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/Relative_top"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            style="@style/button_back_style1"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_camera_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_download"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/background_listbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <TextView
            android:textColor="@color/z2"
            android:gravity="center_vertical"
            android:id="@+id/down_filename"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/all_item_setheight"
            android:text="@string/video_download"
            android:layout_marginStart="@dimen/all_item_margleftright"
            android:layout_marginEnd="@dimen/all_item_margleftright"/>
        <TextView
            android:textColor="@color/z2"
            android:gravity="center_vertical"
            android:id="@+id/down_speed"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/all_item_setheight"
            android:layout_marginEnd="@dimen/all_item_margleftright"
            android:layout_alignParentEnd="true"/>
        <View
            android:background="@color/color_bbbbbb"
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_below="@+id/down_filename"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
        <SeekBar
            android:id="@+id/down_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:maxHeight="5dp"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/seekbar"
            android:minHeight="3dp"
            android:thumb="@drawable/select_seekbar"
            android:thumbOffset="1dp"
            android:layout_below="@+id/down_filename"
            android:layout_centerInParent="true"
            android:paddingStart="15dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"/>
    </RelativeLayout>
</LinearLayout>
